---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
	<title type="text" xml:lang="en">{{ site.blog_name }}</title>
	<link type="application/atom+xml" href="{{ site.url }}/atom_feed/" rel="self" />
	<link type="text/html" href="{{ site.url }}/" rel="alternate" />
	<updated>{{ site.time | date_to_xmlschema }}</updated>
	<id>{{ site.url }}/</id>
	<author>
		<name>{{ site.title }}</name>
	</author>

	{% for post in site.posts %}
		<entry>
			<title>{{ post.title }}</title>
			<link href="{{ site.url }}{{ post.url }}" />
			<updated>{{ post.date | date_to_xmlschema }}</updated>
			<id>{{ site.url }}{{ post.url }}</id>
			<content type="html">{{ post.content | xml_escape }}</content>
			{% if post.author %}
				{% assign author = site.authors | where: "author", post.author | limit: 1 %}
				{% if author and author[0] %}
					<author>
						<name>{{ author[0].name }}</name>
					</author>
				{% endif %}
			{% endif %}
		</entry>
	{% endfor %}
</feed>